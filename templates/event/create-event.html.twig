{% extends '_template-navbar.html.twig' %}

{% block title %}Création d'un évènement{% endblock %}

{% block content %}
{# Le h est temporaire #}
   <div class="container-fluid d-flex justify-content-center h-100 ">
    <div class="section mt-5 p-3 bg-light shadow mb-5">
       <h1 class="text-center">Création d'un évènement</h1>
        {{form_start(registration_form)}}
           {{ form_row(registration_form.photo,{label:"Inserer une image"}) }} 
            {{ form_row(registration_form.nom,{label:"Nom de l'évènement"}) }}
            {{ form_row(registration_form.description,{label:"Description"}) }}
            
            {{ form_row(registration_form.lieu, {
                label: 'Lieu'}) }}
            {{ form_row(registration_form.date, {
                label: 'Date'}) }}

                
                 <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{form_end(registration_form)}}


       

    </div>
  </div>
{% endblock %}
