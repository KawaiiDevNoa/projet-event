{% extends '_template-navbar.html.twig' %}


{% block title %}Mes évènements{% endblock %}


{% block  content %}
 <div class="container-fluid ">
     <div class="row bg-warning p-4 ">
        <div class="col-4">
        </div>
        <div class="col-4 text-center text-light">
           <h1 class="text-dark">Mes évènements</h1>
        </div>
        <div class="col-4 d-flex justify-content-end">
           <div class="w-50">
              <label for="exampleFormControlSelect1">Trier par</label>
              <select class="form-control" id="exampleFormControlSelect1">
              <option>ordre croissant </option>
              <option>ordre décroissant</option>
              </select>
           </div>
        </div>
  
     </div>
     <p class="h3 font-bold">Nombre d'évènements: {{events|length}}</p>
     {# ici event (peut etre nommé de plusieurs facon est le nom qu'on donne au tableau events #}
     {% for event in events %}
     <section class="d-flex justify-content-md-center  ">

        <div class=" shadow w-50 text-center mt-4">
            <h2 class="mt-4">{{event.nom}}</h2>
              <br>
            
            <p class="font-weight-bold">Description:</p>
            <p>{{event.description}}</p>
              <br>
            
            <p class="font-weight-bold">Lieu:</p>
            <p>{{event.lieu}}</p>
              <br>
            
            <p class="font-weight-bold">Date:</p>
            <p></p>
            {# <p>{{event.date}}</p> #}
            <div class="row justify-content-md-center mb-4">
               <a href="{{path('app_edit_my_event',{id: event.id}) }}" type="button" class="btn btn-danger mr-2" title="modifier">💡</a>
               <a href="{{path('delete',{id: event.id,token: csrf_token('event-delete')}) }}"  type="button" class="btn btn-success" title="supprimer">❌</a>
            </div>
        </div>
        

     </section>
     {% endfor %}
 </div>

{% endblock %}