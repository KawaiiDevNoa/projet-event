{% extends '_template-navbar.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
{# le vh est temporaire #}
  <div class="container-fluid d-flex justify-content-center vh-100 row">
  <div class="section bg-light p-4 shadow align-self-center" >
    <h1 class="text-center">Connexion</h1>

     {% if app.user %}
                <div class="notification is-info">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
     {% endif %}


        <form method="post">
        <div class="field">
            <label for="username" class="col-sm-10 col-form-label">Pseudo ou Email</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="username" value="{{ last_username }}" name="username"> 
            </div>
        </div>
       
        <div class="field">
            <label for="mdp" class="col-sm-10 col-form-label">Mot de passe</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="mdp" name="password">
            </div>
        </div>

    

        
        <div class="form-group row">
            <div class="col-sm-10 ml-3 mt-2">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary">Se connecter</button>
            </div>
        </div>
        </form>
    </div>
</div>

 
{% endblock %}
