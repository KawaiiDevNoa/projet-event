{% extends '_template-navbar.html.twig' %}

{% block title %}Formulaire d'inscription{% endblock %}

{% block content %}
  {# le h est temporaire #}
  <div class="container-fluid d-flex justify-content-center h-100 ">
    <div class="section mt-5 mb-5 p-3 bg-light shadow ">
       <h1 class="text-center">Formulaire d'inscription</h1>
        {{form_start(registration_form)}}
            {{ form_row(registration_form.email,{label:"Adresse email"}) }}
            {{ form_row(registration_form.pseudo,{label:"Pseudo"}) }}
            
            {{ form_row(registration_form.plainPassword.first, {
                label: 'Mot de passe'}) }}
            {{ form_row(registration_form.plainPassword.second, {
                label: 'Confirmer le mot de passe'}) }}
                 <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{form_end(registration_form)}}


       

    </div>
  </div>

{% endblock %}
